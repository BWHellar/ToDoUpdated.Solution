@{
  Layout = "_Layout";
}
<div class="grid">
  <div class="header">
      <h1>Categories</h1> 
  </div>
</div>
<div class="aline">
  @if (@Model.Count == 0)
  {
    <h3>No categories have been added yet!</h3>
  }

  @foreach (var category in Model)
  {
    <h3><a href='/categories/@category.GetId()'>@category.GetName()</a></h3>
  }
</div>
  <div class="home">
    <p><a href='/'>Back home</a></p>
  </div>
