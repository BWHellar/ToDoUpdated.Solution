@{
  Layout = "_Layout";
}
<div class="grid">
  <div class="header">
    <div class="home">
      <p><a href="/">Home</a></p>
    </div>
      <h1>Categories</h1>
  </div>
</div>
<div class="aline">
  @if (@Model.Count == 0)
  {
    <h3>No categories have been added yet!</h3>
  }

  @foreach (var category in Model)
  {
    <h3><a href='/categories/@category.GetId()'>@category.GetName()</a></h3>
  }
</div>
  <div class="back">
    <p><a href='/categories/new'>Add New Category</a></p>
  </div>
